extends ../layouts/common

block content
  h1 Users
    a(href="/users/create" class="btn btn-primary ml-3") New
  .d-flex.align-items-center
    form(action="/users/search", method="GET", class="form-group d-flex ml-auto")
      input(type="text", name="q", value=q, class="form-control")
      button(class="btn btn-primary ml-2") Search
  table.table
    thead
      tr
        th(scope="col") #
        th(scope="col") name
        th(scope="col") phone
        th(scope="col") action
    tbody
      each user, index in users
        tr
          th= index + 1
          td= user.name
          td= user.phone
          td
            a(class="btn btn-light" href=`/users/${user.id}` ) view
