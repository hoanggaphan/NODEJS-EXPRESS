extends ../layouts/common

block content
  h1 Login
  form(method="POST")
    .form-group
      label(for="email") Email
      input(name="email", type="text", class="form-control" id='email', value=values ? values.email : "" )
    .form-group
      label(for="password") Password
      input(name="password", type="password", class="form-control" id='password', value=values ? values.password : "")
    button(class="btn btn-primary ml-2 mb-3") Login
    if errors
      each error in errors
        .alert.alert-danger(role="alert")= error

  